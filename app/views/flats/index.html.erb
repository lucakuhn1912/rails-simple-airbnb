<div class="container">
  <h1>All our Flats</h1>
  <p>You searched for . We found 3 flats out of our 3 on our website.</p>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-xs-6 col-sm-4" style="margin-top: 50px;">
        <div class="card d-inline-flex p-2 ">
          <img src="https://images.unsplash.com/photo-1556912998-c57cc6b63cd7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80" alt="flat" style="height: 200px">
          <h2><%= flat.name %></h2>
          <p><%= flat.address %></p>
          <p><i class="fas fa-users"></i> <%=  flat.number_of_guests %></p>
          <p><i class="fas fa-pound-sign"></i> <%= flat.price_per_night %></p>
          <%= link_to 'More Info', flat_path(flat) %>
          <%= link_to 'Edit', edit_flat_path(flat) %>
          <%= link_to 'Delete', flat_path(flat), method: :delete,
          data: { confirm: "Are you sure?"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>

